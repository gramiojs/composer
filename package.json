{
	"name": "@gramio/composer",
	"version": "0.1.1",
	"description": "General-purpose, type-safe middleware composition library for TypeScript",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"type": "module",
	"author": "kravets",
	"license": "MIT",
	"keywords": [
		"gramio",
		"middleware",
		"composer",
		"compose",
		"koa",
		"typescript"
	],
	"scripts": {
		"prepublishOnly": "bunx pkgroll",
		"test": "bun test",
		"lint": "bunx @biomejs/biome check src",
		"lint:fix": "bun lint --write"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "^1.3.9",
		"pkgroll": "^2.5.1",
		"typescript": "^5.7.2"
	},
	"files": ["dist"]
}
